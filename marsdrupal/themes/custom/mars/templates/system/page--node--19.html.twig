{# Frontpage: Page Wrapper #}
{% set container = mars.settings.fluid_container ? 'container-fluid' : 'container' %}

<div id="page" class="layout-container">
    {# Header #}
    <headerGroup>
        {% if page.header %}
            {% block header %}
                <header id="headerTop" role="banner">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-12" role="heading">
                                {{ page.header }}
                            </div>
                        </div>
                    </div>
                </header>
            {% endblock %}
        {% endif %}
        {# Navbar - Primary and Seconday#}
        {% if page.navigation or page.navigation_collapsible %}
            {% block navbar %}
                {%
                set navbar_classes = [
                'navbar',
                theme.settings.navbar_inverse ? 'navbar-inverse' : 'navbar-default',
                ]
                %}
                {#theme.settings.navbar_position ? 'navbar-' ~ theme.settings.navbar_position|clean_class : container,#}
                {# templates/navigation/nav-header-top.html.twig #}
                <header{{ navbar_attributes.addClass(navbar_classes) }} id="topNavbar" role="navigation">
                    <div class="container-fluid">
                        {% if page.navigation %}
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#topNavigation">
                                    <span class="sr-only">{{ 'Toggle navigation'|t }}</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>
                            </div>
                            <div id="topNavigation" class="navbar-collapse collapse">
                                {{ page.navigation }}
                            </div>
                        {% endif %}
                    </div>
                </header>
                {# templates/navigation/nav-header-bottom.html.twig #}
                {#{% include directory ~ '/templates/navigation/nav--header-bottom.html.twig' %}#}
                {# templates/navigation/nav-header-bottom.html.twig #}
                <header id="breadcrumbBar" role="navigation">
                    <div class="container-fluid">
                        {% if page.breadcrumb %}
                            {% block breadcrumb %}
                                {{ page.breadcrumb }}
                            {% endblock %}
                        {% endif %}
                    </div>
                </header>

            {% endblock %}
        {% endif %}
    </headerGroup>

    <article>
        {% block main %}
            <main role="main" class="main-container container-fluid js-quickedit-main-content">
                <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
                <div class="content-wrapper">
                    {# Content #}
                    {%
                    set sidebar_left_classes = [
                    'content-left-sidebar',
                    page.sidebar_right is empty ? 'col-md-4',
                    page.sidebar_right ? 'col-md-3'
                    ]
                    %}
                    {%
                    set content_classes = [
                    'content-section',
                    (page.sidebar_left and page.sidebar_right is empty) or (page.sidebar_right and page.sidebar_left is empty ) ? 'col-md-8',
                    page.sidebar_left is empty and page.sidebar_right is empty ? 'col-md-12',
                    page.sidebar_left and page.sidebar_right ? 'col-md-6'
                    ]
                    %}
                    {%
                    set sidebar_right_classes = [
                    'content-right-sidebar',
                    page.sidebar_left is empty? 'col-md-4',
                    page.sidebar_left ? 'col-md-3'
                    ]
                    %}

                    {# Page Top #}
                    {# Highlighted #}
                    {% if page.highlighted %}
                        {% block highlighted %}
                            <div class="highlighted">{{ page.highlighted }}</div>
                        {% endblock %}
                    {% endif %}


                    <div class="row main-content-section">

                        {% if page.sidebar_left %}
                            <div{{ attributes.addClass(sidebar_left_classes) }}>
                                {{ page.sidebar_left }}
                            </div>
                        {% endif %}

                        <div{{ attributes.removeClass(sidebar_left_classes).addClass(content_classes) }}>
                            {# Content #}
                            {% block content %}
                                {% for item in items %}
                                    {{ kint(item.content) }}
                                {% endfor %}
                                <div class="layout-content">
                                <dl class="examples">

                                    {# You can pass arguments to the view if needed. #}
                                    <dt>View:</dt>
                                    <dd>{{ drupal_view('view_name', 'page_1') }}</dd>

                                    {# The block with this ID should be configured on "admin/structure/block" page. #}
                                    <dt>Block:</dt>
                                    <dd>{{ drupal_block('mars_powered') }}</dd>

                                    {# It can be any content entity. #}
                                    <dt>Entity:</dt>
                                    <dd>{{ drupal_entity('block_content', 6) }}</dd>

                                    {# Load an entity from the current route. #}
                                    <dt>Entity from route:</dt>
                                    <dd>{{ drupal_entity('node', null, 'teaser') }}</dd>

                                    {# Render a single entity field. #}
                                    <dt>Field:</dt>
                                    <dd>{{ drupal_field('field_image', 'node', 1) }}</dd>

                                    {# To display the entire menu tree you need to expand each item in it. #}
                                    <dt>Menu:</dt>
                                    <dd>{{ drupal_menu('main') }}</dd>

                                    {# You can optionally provide menu level and depth. #}
                                    <dt>Part of menu:</dt>
                                    <dd>{{ drupal_menu('admin', 2, 3) }}</dd>

                                    {# Use token API to deliver data to your templates. #}
                                    <dt>Token:</dt>
                                    <dd>{{ drupal_token('site:name') }}</dd>}

                                    {# Tokens can be extracted from context. #}
                                    <dt>Token with context:</dt>
                                    <dd>{{ drupal_token('node:title', {node: node}) }}</dd>

                                    {# Another way to get site name. #}
                                    <dt>Config:</dt>
                                    <dd>{{ drupal_config('system.site', 'name') }}</dd>

                                    {# Welcome back old friend! #}
                                    <dt>PHP filter:</dt>
                                    {#<dd class="bad-practice">Â© {{ 'return date("Y");' | php }}</dd>#}

                                    {# Replace multiple tokens at once. #}
                                    <dt>Token replace:</dt>
                                    <dd>{{ '<h1>[site:name]</h1><div>[site:slogan]</div>' | token_replace }}</dd>

                                    {# The easiest way to alter their output. #}
                                    <dt>Preg replace:</dt>
                                    <dd>{{ 'Drupal - community plumbing!' | preg_replace('(Drupal)', '<b>$1</b>') }}</dd>

                                    {# You may provide either path or URI to original image. #}
                                    <dt>Image style:</dt>
                                    <dd>{{ 'public://images/ocean.jpg' | image_style('thumbnail') }}</dd>

                                </dl>
                                </div>{# /.layout-content #}
                            {% endblock %}
                        </div>

                        {% if page.sidebar_right %}
                            <div{{ attributes.removeClass(content_classes).addClass(sidebar_right_classes) }}>
                                {{ page.sidebar_right }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </main>
        {% endblock %}
    </article>

    {# Page Bottom #}
    {% if page.front_bottom %}
        {% block bottom %}
            <div class="page-bottom" role="contentinfo">
                {{ page.front_bottom }}
            </div>
        {% endblock %}
    {% endif %}

    {# Footer #}
    {% if page.footer %}
        {% block footer %}
            <footer id="mainFooter" class="footer" role="contentinfo">
                <div class="{{ container }}">
                    {{ page.footer }}
                </div>
            </footer>
        {% endblock %}
    {% endif %}

</div>
{# /.layout-container #}
